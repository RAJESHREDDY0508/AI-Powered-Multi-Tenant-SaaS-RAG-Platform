# Copy to .env and fill in real values — never commit .env to git

# Database (asyncpg driver)
DATABASE_URL=postgresql+asyncpg://app_user:changeme_in_production@localhost:5432/rag_platform

# Connection pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO_SQL=true   # set false in production

# AWS — S3 + KMS
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
S3_BUCKET=rag-platform-documents

# Local dev only — in prod use ECS task role / IRSA, not static keys
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Vector Store
VECTOR_STORE_BACKEND=weaviate    # "pinecone" | "weaviate"

# Pinecone (if backend=pinecone)
PINECONE_API_KEY=
PINECONE_INDEX_NAME=rag-platform

# Weaviate (if backend=weaviate)
WEAVIATE_HOST=localhost
WEAVIATE_PORT=8080
WEAVIATE_API_KEY=                # empty = local/Docker

# Embeddings
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# LLM
OPENAI_API_KEY=
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=2048

# Auth — OIDC (choose Cognito OR Auth0)
AUTH_ISSUER=
AUTH_AUDIENCE=

# Auth0 (leave empty if using Cognito)
AUTH0_NAMESPACE=https://api.ragplatform.io

# AWS Cognito (leave empty if using Auth0)
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=

# S3 default KMS key (per-tenant keys set after provisioning)
S3_DEFAULT_KMS_KEY_ARN=

# App
APP_ENV=development
DEBUG=true
